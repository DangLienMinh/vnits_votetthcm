= form_for(@item, :url => url_for(:controller => 'subjects', :action => "#{action}")) do |f|
  %fieldset
    - if @item.errors.any?
      #error_explanation
        %h2
          = pluralize(@item.errors.count, "error")
          prohibited this item from being saved:
        %ul
          - @item.errors.full_messages.each do |msg|
            %li= msg
    .form-group
      %label.col-md-3.control-label Họ tên
      .col-md-9
        = f.text_field :name, :required => true, class: 'form-control'
      .clearfix
    .form-group
      %label.col-md-3.control-label Thuộc đối tượng
      .col-md-9
        = f.select :group_id, Group.all.map{|item| [item.name, item.id]}, {}, class: 'form-control'
      .clearfix
    .form-group
      %label.col-md-3.control-label Môn
      .col-md-9
        = f.select :sport_id, Sport.all.map{|item| [item.name, item.id]}, {}, class: 'form-control'
      .clearfix
    .form-group
      %label.col-md-3.control-label Mô tả
      .col-md-9
        = f.cktext_area :detail, class: 'form-control'
      .clearfix
    .text-right
      = f.submit "Hoàn thành", :class => 'btn', class: 'btn.btn-info'
      .clearfix