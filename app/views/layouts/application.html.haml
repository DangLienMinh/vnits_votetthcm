%html{lang: "en"}
  %head
    = render 'head'
    = stylesheet_link_tag 'application', :media => "all"
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body#page-top
    /header start
    = render 'top_menu'

    / main content start
    = render 'layouts/messages'
    = yield
    = render 'footer'
    /main content end

    / Placed js at the end of the document so the pages load faster
